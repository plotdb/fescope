#!/usr/bin/env bash
mkdir -p dist
echo "build src/index.ls -> dist/rescope.js ..."
./node_modules/.bin/lsc --no-header -cp src/index.ls > dist/rescope.js
echo "minifying rescope.js ..."
./node_modules/.bin/uglifyjs dist/rescope.js -m -c > dist/rescope.min.js
echo "update web assets ..."
mkdir -p web/static/assets/lib/rescope/dev
cp dist/* web/static/assets/lib/rescope/dev/
echo "done."
